<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.whl.common.mappers.SysMenuDao">

	<!-- 可根据自己的需求，是否要使用 -->


	<select id="getPermissionByRoles" resultType="com.whl.common.models.SysMenuEntity">
	SELECT * FROM sys_menu a left JOIN sys_role_menu b on a.menu_id=b.menu_id WHERE
	b.role_id in
	<foreach collection="roleIds" item="id" open="(" close=")" separator=",">
		#{id}
	</foreach>
	</select>
</mapper>